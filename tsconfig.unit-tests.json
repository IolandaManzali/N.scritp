{
    "compilerOptions": {
        "noEmitOnError": false,
        "noEmitHelpers": true,
        "target": "es5",
        "module": "commonjs",
        "noImplicitUseStrict": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "diagnostics": true,
        "sourceMap": true,
        "inlineSourceMap": false,
        "lib": [
            "es6",
            "dom"
        ],
        "types": [
            "node",
            "chai",
            "mocha"
        ],
        "baseUrl": ".",
        "paths": {
            "tns-core-modules/*": [
                "tns-core-modules/*"
            ]
        }
    },
    "include": [
        "tns-core-modules/**/*.ts",
        "unit-tests/**/*.ts"
    ],
    "exclude": [
        "**/*.android.ts",
        "**/*.android.d.ts",
        "**/*.ios.ts",
        "**/*.ios.d.ts",
        "tns-platform-declarations",
        "tns-core-modules/node-modules",
        "tns-core-modules/references.d.ts",
        "tns-core-modules/platforms"
    ]
}