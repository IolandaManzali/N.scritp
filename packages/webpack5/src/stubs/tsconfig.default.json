{
	"compilerOptions": {
		"module": "esnext",
		"target": "es2017",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noEmitHelpers": true,
		"noEmitOnError": true,
		"skipLibCheck": true,
		"lib": ["es2017", "dom"],
		"baseUrl": ".",
		"paths": {
			"~/*": ["app/*"],
			"@/*": ["app/*"]
		}
	},
	"include": ["./**/*"],
	"exclude": ["node_modules", "platforms"]
}
