<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="Dev Toolbox" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-t-20 p-x-20">
        <Label text="Tap the button" class="h1 text-center"/>
        <Button text="TAP" tap="{{ onTap }}" height="100" class="btn btn-primary btn-active" boxShadow="5 5 10 5 blue"/>
        <Label text="{{ message }}" class="h2 text-center" textWrap="true"/>
        <StackLayout class="c-bg-grey w-full m-y-5" height="1"></StackLayout>
        <ScrollView class="h-full">
          <StackLayout>
            <Label text="More things to tool around with:" class="t-12 text-center font-italic m-t-10"/>
            <Button text="View List" height="100" tap="{{ viewList }}" class="btn"/>

              <StackLayout padding="50" boxShadow="10 10 20 20 #ddd">
                <Label text="StackLayout" padding="50" backgroundColor="pink" boxShadow="10 20 20 20 #0ff"/>
              </StackLayout>
            <!-- add more examples below as desired to test and play around -->
          </StackLayout>
        </ScrollView>
        
    </StackLayout>
</Page>
