<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="Dev Toolbox" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <RootLayout>
    <StackLayout class="p-t-20 p-x-20">
        <Label text="Tap the button" class="h1 text-center"/>
        <Button text="TAP" tap="{{ onTap }}" class="btn btn-primary btn-active"/>
        <GridLayout columns="*, *, *">
          <StackLayout col="0">
            <Label textAlignment="center" fontWeight="bold" text="blue"></Label>
            <Button text="open" tap="{{ open }}" popupIndex="0" class="btn btn-primary btn-active"/>
            <Button text="bring to front" tap="{{ bringToFront }}" popupIndex="0" class="btn btn-primary btn-active"/>
            <Button text="close" tap="{{ close }}" popupIndex="0" class="btn btn-primary btn-active"/>
          </StackLayout>
          <StackLayout col="1">
            <Label textAlignment="center" fontWeight="bold" text="yellow"></Label>
            <Button text="open" tap="{{ open }}" popupIndex="1" class="btn btn-primary btn-active"/>
            <Button text="bring to front" tap="{{ bringToFront }}" popupIndex="1" class="btn btn-primary btn-active"/>
            <Button text="close" tap="{{ close }}" popupIndex="1" class="btn btn-primary btn-active"/>
          </StackLayout>
          <StackLayout col="2">
            <Label textAlignment="center" fontWeight="bold" text="green"></Label>
            <Button text="open" tap="{{ open }}" popupIndex="2" class="btn btn-primary btn-active"/>
            <Button text="bring to front" tap="{{ bringToFront }}" popupIndex="2" class="btn btn-primary btn-active"/>
            <Button text="close" tap="{{ close }}" popupIndex="2" class="btn btn-primary btn-active"/>
          </StackLayout>
        </GridLayout>
        <Label text="{{ message }}" class="h2 text-center" textWrap="true"/>
        <StackLayout class="c-bg-grey w-full m-y-5" height="1"></StackLayout>
        <ScrollView class="h-full">
          <StackLayout>
            <Label text="More things to tool around with:" class="t-12 text-center font-italic m-t-10"/>
            <Button text="View List" tap="{{ viewList }}" class="btn"/>
            <!-- add more examples below as desired to test and play around -->
          </StackLayout>
        </ScrollView>
        
    </StackLayout>
    </RootLayout>
</Page>
