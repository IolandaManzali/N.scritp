<Page codeFile="~/tab-page/tabs-page" xmlns="http://schemas.nativescript.org/tns.xsd" class="page">

    <ActionBar class="action-bar">
        <NavigationButton tap="onBackButtonTap" android.systemIcon="ic_menu_back" />
        <Label class="action-bar-title" text="tab page" horizontalAlignment="center" />
    </ActionBar>
    
    <GridLayout rows="auto, *">
        <Button text="Navigate to some page" tap="onNavigate" />
        <GridLayout row="1">
            <TabView androidTabsPosition="bottom">
                <TabViewItem title="First">
                    <Frame defaultPage="players/players-items-page" />
                </TabViewItem>
                <TabViewItem title="Second">
                    <Frame defaultPage="teams/teams-items-page" />
                </TabViewItem>
            </TabView>
        </GridLayout>
    </GridLayout>
</Page>